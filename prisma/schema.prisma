generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Users {
  id        String    @id @default(uuid())
  firstName String    @db.VarChar(30)
  lastName  String    @db.VarChar(60)
  email     String    @unique @db.VarChar(60)
  password  String    @db.VarChar(120)
  status    String    @db.VarChar(30)
  roles     String[]
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
  updatedBy String?   @db.VarChar(60)
}

model Matches {
  id              String  @id @default(uuid())
  idMatch         Int     @unique
  hboMax          Boolean @default(false)
  canalTnt        Boolean @default(false)
  playPlus        Boolean @default(false)
  canalRecord     Boolean @default(false)
  cazeTv          Boolean @default(false)
  paulistaoPlay   Boolean @default(false)
  camisa21        Boolean @default(false)
  futebolPaulista Boolean @default(false)
  canalFutura     Boolean @default(false)
  paulistao       Boolean @default(false)
  sportv          Boolean @default(false)
  globo           Boolean @default(false)
  premiere        Boolean @default(false)
  link            String  @db.VarChar(255) @default("")
}
